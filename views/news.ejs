<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CricStats</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-1">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img class="logo" src="logo.png" alt="" width="45" height="35"> &nbsp; 
                <%=firstName %></a>
            <a class="navbar-brand btn btn-danger btn-small" style="color: white;" href="/auth/logout">Logout</a>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <div class="row d-flex justify-content-evenly">
            <% data.forEach(function(article){ %>
                <div class="card col-3 mx-2 mb-3 text-center" style="background-color: #e0dfdc;">
                    <img class="card-img-top" src="<%=article.urlToImage%>" alt="Card image cap">
                    <div class="card-body">
                    <h6 class="card-title"><%= article.title!==null && article.title %></h6>
                    <p class="card-text"> - <b><%= article.source.name %></b></p>
                    <p class="card-text"><%= new Date(article.publishedAt).toLocaleString() %></p>
                    <a href="<%=article.url%>" class="btn btn-primary col-12">View</a>
                    </div>
                </div>
            <% }) %>
            <br/>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="ejs.min.js"></script>
</body>
</html>
